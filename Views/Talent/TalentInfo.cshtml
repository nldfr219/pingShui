
@{
    ViewBag.Title = "TalentInfo";
    Layout = "~/Views/Shared/_Layout2.cshtml";
}

<div data-role='page' id='talent' class="graybg">
    <input type="hidden" id="RecommendId" value="0" />  
    <input type="hidden" id="TalentPoolId" value="0" />  
    <input type="hidden" id="isSave" value="0" />
    <div style="height:40px;"></div>
    <div class="prompt fontBlue module margintop20">待联系列表</div>
    <ul class="ulmodule grayborder whiteBg" id="contactUl">
        
    </ul>
    <div class="prompt fontBlue module margintop10">联系职位</div>
    <ul class="ulmodule grayborder margintop20 whiteBg">
        <li class="formmodule" id="position">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="positionText" readonly="readonly" placeholder="联系职位" /> 
        </li>
    </ul>
    <div class="prompt fontBlue module margintop10">是否考虑该职位</div>
    <ul class="ulmodule grayborder whiteBg">
        <li class="formmodule">
            <select id="considerPosition" style="width:100%;">
                <option value="0">否</option>
                <option value="1">是</option>
            </select>
        </li>
    </ul>
    <div class="prompt fontBlue module margintop10">人才信息</div>
    <ul class="ulmodule grayborder whiteBg">
        <li class="formmodule">
            <input type="text" class="text" name="name" id="name" placeholder="姓名" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule">
            <input type="tel" class="text" id="phone" placeholder="电话" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule">
            <input type="email" class="text" id="email" placeholder="邮件" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule" id="genderli">
            <select id="gender" style="width:100%;">
                <option value="0">性别</option>
                <option value="1">男</option>
                <option value="2">女</option>
            </select>
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule" id="source">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="sourceText" readonly="readonly" placeholder="信息来源" />
        </li>
    </ul>
    <div class="prompt fontBlue module margintop10">公司信息</div>
    <ul class="ulmodule grayborder whiteBg">
        <li class="formmodule" id="company">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="companyText" readonly="readonly" placeholder="目前公司" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule" id="currentPosition">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="currentPositionText" readonly="readonly" placeholder="目前职位" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule" id="salary">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="salaryText" readonly="readonly" placeholder="方便更新您目前的年薪范围吗？" />
            <input type="hidden" id="salaryVal" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule" id="currentCity">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="currentCityText" readonly="readonly" placeholder="目前所在地" />
        </li>
        <li class="line marginleft10"></li>
        <li class="module" style="height:85px">
            <textarea id="capability" class="devDesc" style="width:100%;margin-top:10px" placeholder="如果我向客户介绍您，如果介绍您最能为企业解决的问题？"></textarea>
        </li>

    </ul>
    <div class="prompt fontBlue module margintop10">求职状态</div>
    <ul class="ulmodule grayborder whiteBg">
        <li class="formmodule" id="expectCity">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="expectCityText" readonly="readonly" placeholder="您会优先考虑哪些城市的机会" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule" >
            <input type="text" class="text" id="expectChanceText" placeholder="什么样的机会才能吸引你？" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule" id="expectSalary">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="expectSalaryText" readonly="readonly" placeholder="下次联系，年薪低于多少不打扰您了？" />
            <input type="hidden" id="expectSalaryVal" />
        </li>
    </ul>
    <div class="prompt fontBlue module margintop10">是否考虑创业型公司</div>
    <ul class="ulmodule grayborder whiteBg">
        <li class="formmodule">
            <select id="considerStartup" style="width:100%;">
                <option value="0">否</option>
                <option value="1">是</option>
            </select>
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule" >
            <input type="text" class="text" id="considerStartupReason" placeholder="原因" />
        </li>
    </ul>
    <ul class="ulmodule grayborder whiteBg margintop10">
        <li class="formmodule" id="refereeM">
            <img class=" sel" src="/img/right.png" />
            <label class="text fontBlue">推荐人</label>
        </li>
    </ul>
    <ul class="ulmodule grayborder whiteBg margintop10">
        <li class="formmodule" id="talentTag">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="talentTagText" readonly="readonly" placeholder="标签" />
        </li>
    </ul>
    <div class="module margintop10">
        <textarea id="description" style="width:100%" class="devDesc" placeholder="备注："></textarea>
    </div>
    <ul class="ulmodule grayborder whiteBg margintop10">
        <li class="formmodule">
            <input type="text" class="text" id="worksUrl" placeholder="作品链接" />
        </li>
    </ul>
    <ul class="ulmodule grayborder whiteBg margintop10">
        <li class="formmodule">
            <input type="text" class="text" id="followupTime" readonly="readonly" placeholder="跟进时间" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule">
            <input type="text" class="text" id="followupContent"  placeholder="跟进内容" />
        </li>
    </ul>
    <div style="height:70px"></div>
    <div class="floatHeader">
        <div class="headerblueimg">
            <a class="back left fontWhite18 marginleft10" id="loginout" href="javascript:void(0)">返回</a>
            人才录入
            <a class="next right fontWhite18" id="talentClearbtn" href="javascript:void(0)" data-role="none">清除</a>
        </div> 
    </div>
    <div class="floatFooter blueBg" id="floatFooter" style="height:43px">
        <center>
            <a href="javascript:void(0)" class="fontWhite btnFill margintop10" id="sendmsg">发送评价短信并保存</a>
        </center>
    </div>
</div>

<div data-role='page' id='gtags' class="whiteBg">
    <div class="headerblueimg">
        <a class="back left gtag-save" href="javascript:void(0)"><img src="/img/back.png" /></a>
        <span id="tagTitle"></span>
        <a class="next right fontWhite18 gtag-save" href="javascript:void(0)" data-role="none">保存</a>
    </div>
    <div>
        <ul id="hotTag" class="u-tag3"></ul>
    </div>
        <div>
            <ul id="a-tagg" class="u-tag3"></ul>
        </div>
        <div style="padding-top: 10px; clear: both;">
            <div style="margin-left: 10px;"><input type="text" id="addgtagText" class="tagtext" data-role="none" /><a href="javascript:void(0)" id="addgtag" class="btnWithText marginleft20 blueBg fontWhite16 blod">添加标签</a></div>
        </div>
</div>

<div data-role='page' id='positionPage' class="whiteBg">
    <div class="headerblueimg">
        <a class="back left p-save" href="javascript:void(0)"><img src="/img/back.png" /></a>
        联系职位
    </div>
    <div>
        <ul id="pclist" class="u-tag3"></ul>
    </div>
    <div style="padding-top: 10px; clear: both;">
        <ul class="ulmodule grayborder whiteBg">
            <li class="formmodule">
                <img class=" sel" src="/img/right.png" />
                <input type="text" class="text" id="p-company"  placeholder="联系公司" />
            </li>
            <li class="line marginleft10"></li>
            <li class="formmodule" >
                <img class=" sel" src="/img/right.png" />
                <input type="text" class="text" id="p-position"  placeholder="联系职位" />
            </li>
        </ul>
        
</div>
    <div style="margin-left: 10px; height:80px;"><a href="javascript:void(0)" id="addpc" style="display:inline-block" class="btnWithText margintop10 blueBg fontWhite16 blod">添加</a></div>
</div>

<!--推荐人-->
<div data-role='page' id='referee' class="graybg">
    <div class="headerblueimg">
        <a class="back left ref-save" href="javascript:void(0)"><img src="/img/back.png" /></a>
        推荐人
        <a class="next right fontWhite18 ref-save" href="javascript:void(0)">保存</a>
    </div>
    <div class="prompt fontBlue module margintop10">人才信息</div>
    <ul class="ulmodule grayborder whiteBg">
        <li class="formmodule">
            <input type="hidden" id="refid" value="0"/>
            <input type="text" class="text" name="ref-name" id="ref-name" placeholder="姓名" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule">
            <input type="text" class="text" id="ref-phone" placeholder="电话" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule">
            <input type="email" class="text" id="ref-email" placeholder="邮件" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule">
            <select id="ref-gender" style="width:120px;">
                <option value="0">性别</option>
                <option value="1">男</option>
                <option value="2">女</option>
            </select>
        </li>
    </ul>
    <div class="prompt fontBlue module margintop10">公司信息</div>
    <ul class="ulmodule grayborder whiteBg">
        <li class="formmodule" id="ref-company">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="ref-companyText" readonly="readonly" placeholder="目前公司" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule" id="ref-currentPosition">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="ref-currentPositionText" readonly="readonly" placeholder="目前职位" />
        </li>
        <li class="line marginleft10"></li>
        <li class="formmodule" id="ref-currentCity">
            <img class=" sel" src="/img/right.png" />
            <input type="text" class="text" id="ref-currentCityText" readonly="readonly" placeholder="目前所在地" />
        </li>
    </ul>
    <div style="margin-left: 10px;"><a href="javascript:void(0)" id="addref" style="display:inline-block" class="btnWithText margintop10 blueBg fontWhite16 blod">添加</a></div>
    <ul id="ref-list" class="ulmodule grayborder whiteBg margintop10">


    </ul>
</div>

    <script type="text/template" id="tag_template">
        <li><span class='tag-g devtag'><%=tagname_label%></span></li>
    </script>

    <script type="text/template" id="ref_template">
        <li class="formmodule" id="ref-list-item">
            <input type="text" class="text devlistitem" talentid="<%=tmp_talentid%>" relname="<%=tmp_name%>" phone="<%=tmp_phone%>" email="<%=tmp_email%>" gender="<%=tmp_gender%>" company="<%=tmp_company%>" position="<%=tmp_position%>" city="<%=tmp_city%>" readonly="readonly" value="<%=tmp_text%>" />
        </li>
    </script>
    
<script type="text/template" id="contact_template">
    <li class="formmodule">
        <input type="text" class="text devContact" rid="<%=tmp_rid%>" relname="<%=tmp_name%>" phone="<%=tmp_phone%>" email="<%=tmp_email%>" gender="<%=tmp_gender%>" company="<%=tmp_company%>" position="<%=tmp_position%>" city="<%=tmp_city%>" readonly="readonly" value="<%=tmp_value%>" />
    </li>
    <li class="line marginleft10"></li>
</script>

    @section headerlink{
        <script src="/js/dateControl/js/mobiscroll_002.js" type="text/javascript"></script>
        <script src="/js/dateControl/js/mobiscroll_004.js" type="text/javascript"></script>
        <link href="/js/dateControl/css/mobiscroll_002.css" rel="stylesheet" type="text/css">
        <link href="/js/dateControl/css/mobiscroll.css" rel="stylesheet" type="text/css">
        <script src="/js/dateControl/js/mobiscroll.js" type="text/javascript"></script>
        <script src="/js/dateControl/js/mobiscroll_003.js" type="text/javascript"></script>
        <script src="/js/dateControl/js/mobiscroll_005.js" type="text/javascript"></script>
        <link href="/js/dateControl/css/mobiscroll_003.css" rel="stylesheet" type="text/css">
    }

    @section scripts{
        <script type="text/javascript" src="/js/baseData/data.js"></script>
        <script type="text/javascript" src="/js/whojoin/lib/talent.js"></script>
        <script type="text/javascript" src="/js/whojoin/lib/tag.js"></script>
        <script type="text/javascript" src="/js/whojoin/lib/referee.js"></script>
        <script type="text/javascript" src="/js/whojoin/lib/contactposition.js"></script>
        <script type="text/javascript">
            var talentView = TalentViewSingleton();
            talentView.render();
            
            $(function () {

                var currYear = (new Date()).getFullYear();
                var opt = {};
                opt.date = { preset: 'date' };
                opt.datetime = { preset: 'datetime' };
                opt.time = { preset: 'time' };
                opt.default = {
                    theme: 'android-ics light', //皮肤样式
                    display: 'modal', //显示方式
                    mode: 'scroller', //日期选择模式
                    dateFormat: 'yyyy-mm-dd',
                    lang: 'zh',
                    showNow: true,
                    nowText: "今天",
                    startYear: currYear - 10, //开始年份
                    endYear: currYear + 10 //结束年份
                };

                var optDateTime = $.extend(opt['datetime'], opt['default']);
                $("#followupTime").mobiscroll(optDateTime).datetime(optDateTime);
            });

        </script>
    }
